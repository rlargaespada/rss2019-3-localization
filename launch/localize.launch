<launch>

  <!-- Launch a map from the maps folder-->
  <arg name="map" default="$(find localization)/maps/stata_basement.yaml"/>
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map)"/>

  <!-- Begin particle filter localization with params from drive_params.yaml -->
  <node pkg="localization" type="particle_filter.py" name="particle_filter" output="screen">
    <rosparam command="load" file="$(find localization)/drive_params.yaml"/>
  </node>

  <!-- Begin path drawing -->
  <node pkg="localization" type="path_maker.py" name="path_maker" output="screen">
    <rosparam command="load" file="$(find localization)/sim_params.yaml"/>
  </node>

</launch>
